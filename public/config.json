{
  "phaser": {
    "width": 1200,
    "height": 900,
    "mode": "FIT",
    "autoCenter": "CENTER_BOTH",
    "transparent": true,
    "physics": {
      "default": "arcade",
      "arcade": {
        "gravity": { "y": 0 }
      }
    }
  },
  "gameController": {
    "cardsTemplate": {
      "hidden":         { "key": "hidden", "name": "", "image": "card_back" },
      "open":           { "key": "open", "name": "", "image": "card_front" },

      "bag":            { "key": "bag", "name":  "Bag", "image": "bag"},
      "chalice":        { "key": "chalice", "name":  "Chalice", "image": "chalice"},
      "flag_crown":     { "key": "flag_crown", "name":  "Flag Crown", "image": "flag_crown"},
      "glove":          { "key": "glove", "name":  "Glove", "image": "glove"},
      "kite_shield":    { "key": "kite_shield", "name":  "Kite Shield", "image": "kite_shield"},
      "knight_mace":    { "key": "knight_mace", "name":  "Knight Mace", "image": "knight_mace"},
      "landscape_1":    { "key": "landscape_1", "name":  "Landscape 1", "image": "landscape_1"},
      "sword":          { "key": "sword", "name": "Sword", "image": "sword"},
      "tower":          { "key": "tower", "name": "Tower", "image": "tower"},

      "axe":                 { "key": "axe", "name": "Axe", "image":  "axe" },
      "castle":              { "key": "castle", "name": "Castle", "image":  "castle" },
      "crossbow":            { "key": "crossbow", "name": "Crossbow", "image":  "crossbow" },
      "crusader_helmet":     { "key": "crusader_helmet", "name": "Crusader Helmet", "image":  "crusader_helmet" },
      "knight_sword_shield": { "key": "knight_sword_shield", "name": "Knight Sword and Shield", "image":  "knight_sword_shield" },
      "lancer":              { "key": "lancer", "name": "Lancer", "image":  "lancer" },
      "landscape":           { "key": "landscape", "name": "Landscape", "image":  "landscape" },
      "longsword":           { "key": "longsword", "name": "Longsword", "image":  "longsword" },
      "shield":              { "key": "shield", "name": "Shield", "image":  "shield" },

      "archer": { "key": "archer", "name": "Archer", "image": "archer" },
      "cannon": { "key": "cannon", "name": "Cannon", "image": "cannon" },
      "door":  { "key": "door", "name": "Door", "image": "door" },
      "farm": { "key": "farm", "name": "Farm", "image": "farm" },
      "hammer":  { "key": "hammer", "name": "Hammer", "image": "hammer" },
      "spiked_mace": { "key": "spiked_mace", "name": "Spiked_mace", "image": "spiked_mace" },
      "tent":  { "key": "tent", "name": "Tent", "image": "tent" },
      "watchtower": { "key": "watchtower", "name": "Watchtower", "image": "watchtower" },
      "tower_castle":  { "key": "tower_castle", "name": "Tower_castle", "image": "tower_castle" }
    }
  },
  "gameBoard": {
    "size": { "w": 4, "h": 4 },
    "hiddenCardKey": "hidden",
    "openCardKey": "open",
    "card": {
      "size": { "w": 128, "h": 160 },
      "betweenOffset": { "w": 48, "h": 32 },
      "borderOffset": { "w": 230, "h": 32 }
    },
    "ui": {
      "scoreboards": 4,
      "offsetBetweenScores": {"x": 0, "y": 96},
      "playerScoreText": {
        "text": "Player\n0 Pts",
        "offset": {"x": 16, "y": 16},
        "style": {"font": "32px Courier", "fill": "#FFC", "stroke": "#660", "strokeThickness": 2, "align": "left"}
      },
      "infoText": {
        "text": "Player X\nTurn",
        "offset": {"x": 0, "y": 500},
        "style": {"font": "28px Courier", "fill": "#FFC", "stroke": "#660", "strokeThickness": 1, "align": "center"}
      }
    },
    "images": [
      ["card_front", "assets/card_background.png"],
      ["card_back", "assets/card-back.png"],

      ["bag", "assets/spritesheet_1@bag.png"],
      ["chalice", "assets/spritesheet_1@chalice.png"],
      ["flag_crown", "assets/spritesheet_1@flag_crown.png"],
      ["glove", "assets/spritesheet_1@glove.png"],
      ["kite_shield", "assets/spritesheet_1@kite_shield.png"],
      ["knight_mace", "assets/spritesheet_1@knight_mace.png"],
      ["landscape_1", "assets/spritesheet_1@landscape_1.png"],
      ["sword", "assets/spritesheet_1@sword.png"],
      ["tower", "assets/spritesheet_1@tower.png"],

      ["axe", "assets/spritesheet_2@axe.png"],
      ["castle", "assets/spritesheet_2@castle.png"],
      ["crossbow", "assets/spritesheet_2@crossbow.png"],
      ["crusader_helmet", "assets/spritesheet_2@crusader_helmet.png"],
      ["knight_sword_shield", "assets/spritesheet_2@knight_sword_shield.png"],
      ["lancer", "assets/spritesheet_2@lancer.png"],
      ["landscape", "assets/spritesheet_2@landscape.png"],
      ["longsword", "assets/spritesheet_2@longsword.png"],
      ["shield", "assets/spritesheet_2@shield.png"],

      ["archer", "assets/spritesheet_3@archer.png"],
      ["cannon", "assets/spritesheet_3@cannon.png"],
      ["door", "assets/spritesheet_3@door.png"],
      ["farm", "assets/spritesheet_3@farm.png"],
      ["hammer", "assets/spritesheet_3@hammer.png"],
      ["spiked_mace", "assets/spritesheet_3@spiked_mace.png"],
      ["tent", "assets/spritesheet_3@tent.png"],
      ["watchtower", "assets/spritesheet_3@watchtower.png"],
      ["tower_castle", "assets/spritesheet_3@tower_castle.png"]
    ]
  }
}